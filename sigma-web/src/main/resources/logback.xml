            <!--<charset>${log.charset}</charset>-->
            <!--<pattern>${log.pattern}</pattern>-->
        <!--</encoder>-->
    <!--</appender>-->
    <!--<logger name="com.tqmall.mana.biz.mq">-->
        <!--<level value="INFO" />-->
        <!--<appender-ref ref="MQ" />-->
    <!--</logger>-->


    <root>
        <level value="${log.level}" />
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="COMMON" />
        <appender-ref ref="ERROR" />
        <appender-ref ref="WARN" />
    </root>

</configuration>